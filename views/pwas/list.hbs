{{#unless contentOnly}}
<!DOCTYPE html>
<html lang="en">
  <head>
    {{> head}}
  </head>
  <body>
    {{> header}}
    <main>
{{/unless}}      
      <div class="toolbar">
      <a id="add">
          <button id="pwaAdd" href="/pwas/add" type="submit" class="button-primary button gulliver-signedin-aware gulliver-online-aware gulliver-content-only">
          Add PWA
          </button>
      </a>
      </div>

      <div class="items">
          {{#each pwas}}
          <a id="{{id}}" class="item card-pwa gulliver-online-aware gulliver-content-only box-shadow" href="/pwas/{{id}}" style="background-color: {{backgroundColor}}; color:{{contrastColor backgroundColor}}">
          {{#if iconUrl64}}
              <img class="pwa-icon" src="{{iconUrl64}}" srcset="{{iconUrl64}} 1x, {{iconUrl128}} 2x" width="64" height="64" alt="logo for {{displayName}}"/>
          {{else}}
              <svg class="pwa-icon" width="64" height="64">
              <rect width="64" height="64" stroke-width="4" fill="{{backgroundColor}}" />
              <text x="32" y="32" fill="{{contrastColor backgroundColor}}" alignment-baseline="middle" text-anchor="middle" font-size="32px">{{firstLetter displayName}}</text>
              </svg>
          {{/if}}
          <div class="pwa-name">{{{truncate displayName 28}}}</div>
          {{> score }}
          </a>
          {{/each}}
      </div>

      <div class="pager">
      {{#if hasPreviousPage}}
        {{#if sortOrder}}
          <a class="previous gulliver-content-only gulliver-online-aware" href="?sort={{sortOrder}}{{#if previousPageNumber}}&page={{previousPageNumber}}{{/if}}">
        {{else}}
            {{#if previousPageNumber}}
              <a class="previous gulliver-content-only gulliver-online-aware" href="?page={{previousPageNumber}}">
            {{else}}
              <a class="previous gulliver-content-only gulliver-online-aware" href="/">
            {{/if}}  
        {{/if}}
          {{> chevron_left }}
          </a>
      {{/if}}
      {{#if hasNextPage}}
        {{#if sortOrder}}
          <a class="next gulliver-content-only gulliver-online-aware" href="?sort={{sortOrder}}&page={{nextPageNumber}}">
        {{else}}
          <a class="next gulliver-content-only gulliver-online-aware" href="?page={{nextPageNumber}}">
        {{/if}}
          {{> chevron_right }}
          </a>
      {{/if}}
      </div>
{{#unless contentOnly}}
    </main>
    {{> footer}}
  </body>
</html>
{{/unless}}
